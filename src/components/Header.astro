---
// src/components/Header.astro
---

<header class="fixed top-0 left-0 right-0 z-50 w-full h-14 px-6 border-b border-white/8 backdrop-blur-md" style="background-color: rgba(255, 255, 255, 0.01)">
  <nav class="flex justify-between items-center h-full max-w-[1000px] mx-auto w-full">
    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-6">
      <a href="#como-atuo" class="nav-link">
        Como atuo?
      </a>
      <a href="#expertise" class="nav-link">
        Palestras
      </a>
      <a href="#sobre-mentoria" class="nav-link">
        Como gerar valor
      </a>
      <a href="#sobre-mim" class="nav-link">
        Sobre mim
      </a>
      <a href="#faq" class="nav-link">
        FAQ
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button 
      id="mobile-menu-button"
      class="md:hidden flex items-center justify-center w-8 h-8 text-white"
      aria-label="Menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <!-- CTA Button -->
    <button class="relative hidden md:flex h-8 px-6 justify-center items-center rounded-lg bg-[#1169DB] text-white font-semibold text-xs shadow-[inset_0_2px_0_0_rgba(255,255,255,0.12)] hover:shadow-[inset_0_2px_0_0_rgba(255,255,255,0.12),0_4px_8px_rgba(17,105,219,0.3)] hover:-translate-y-0.5 active:translate-y-0 transition-all overflow-hidden">
      Entrar em contato
      <div class="absolute w-12 h-12 left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-white/40 blur-2xl pointer-events-none"></div>
    </button>

    <!-- Mobile CTA -->
    <button class="md:hidden relative flex h-8 px-4 justify-center items-center rounded-lg bg-[#1169DB] text-white font-semibold text-xs shadow-[inset_0_2px_0_0_rgba(255,255,255,0.12)] overflow-hidden">
      Contato
      <div class="absolute w-12 h-12 left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-white/40 blur-2xl pointer-events-none"></div>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden absolute top-14 left-0 right-0 bg-slate-900/95 backdrop-blur-lg border-b border-white/10"
  >
    <div class="flex flex-col p-4 gap-2">
      <a href="#como-atuo" class="mobile-nav-link">
        Como atuo?
      </a>
      <a href="#expertise" class="mobile-nav-link">
        Palestras
      </a>
      <a href="#sobre-mentoria" class="mobile-nav-link">
        Como gerar valor
      </a>
      <a href="#sobre-mim" class="mobile-nav-link">
        Sobre mim
      </a>
      <a href="#faq" class="mobile-nav-link">
        FAQ
      </a>
    </div>
  </div>
</header>

<style>
  .nav-link {
    color: rgba(255, 255, 255, 0.8);
    font-size: 13px;
    font-weight: 500;
    line-height: 150%;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: rgba(255, 255, 255, 1);
  }

  .mobile-nav-link {
    color: rgba(255, 255, 255, 0.8);
    font-size: 13px;
    font-weight: 500;
    line-height: 150%;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .mobile-nav-link:hover {
    color: rgba(255, 255, 255, 1);
    background-color: rgba(255, 255, 255, 0.05);
  }
</style>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
