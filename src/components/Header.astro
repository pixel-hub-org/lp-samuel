---

<header class="header-nav">
  <nav class="header-nav-content">
    <!-- Desktop Navigation -->
    <div class="desktop-nav">
      <a href="#como-atuo" class="nav-link">Como atuo?</a>
      <a href="#expertise" class="nav-link">Palestras</a>
      <a href="#sobre-mentoria" class="nav-link">Mentoria</a>
      <a href="#sobre-mim" class="nav-link">Sobre mim</a>
      <a href="#faq" class="nav-link">FAQ</a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-button"
      class="md:hidden flex items-center justify-center w-8 h-8 text-white cursor-pointer"
      aria-label="Menu"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- CTA Button -->
    <a
      href="https://wa.me/5588996297618"
      target="_blank"
      rel="noopener noreferrer"
      class="relative hidden md:flex h-8 px-6 justify-center items-center rounded-lg bg-[#1169DB] text-white font-semibold text-xs shadow-[inset_0_2px_0_0_rgba(255,255,255,0.12)] hover:shadow-[inset_0_2px_0_0_rgba(255,255,255,0.12),0_4px_8px_rgba(17,105,219,0.3)] hover:-translate-y-0.5 active:translate-y-0 transition-all overflow-hidden"
    >
      Entrar em contato
      <div
        class="absolute size-12 left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-white/40 blur-2xl pointer-events-none"
      >
      </div>
    </a>

    <!-- Mobile CTA -->
    <a
      href="https://wa.me/5588996297618"
      target="_blank"
      rel="noopener noreferrer"
      class="md:hidden relative flex h-8 px-4 justify-center items-center rounded-lg bg-[#1169DB] text-white font-semibold text-xs shadow-[inset_0_2px_0_0_rgba(255,255,255,0.12)] overflow-hidden"
    >
      Contato
      <div
        class="absolute w-12 h-12 left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-white/40 blur-2xl pointer-events-none"
      >
      </div>
    </a>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="mobile-menu-closed md:hidden absolute left-0 right-0 bg-[#0A0A0A] border-b border-white/12 z-50"
    style="top: 55px"
  >
    <div class="flex flex-col p-4 gap-2">
      <a href="#como-atuo" class="mobile-nav-link"> Como atuo? </a>
      <a href="#expertise" class="mobile-nav-link"> Palestras </a>
      <a href="#sobre-mentoria" class="mobile-nav-link"> Como gerar valor </a>
      <a href="#sobre-mim" class="mobile-nav-link"> Sobre mim </a>
      <a href="#faq" class="mobile-nav-link"> FAQ </a>
    </div>
  </div>
</header>

<style>
  .header-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    width: 100%;
    height: 55px;
    padding: 0 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
  }

  .header-nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .desktop-nav {
    display: none;
    align-items: center;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .desktop-nav {
      display: flex;
    }
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.8);
    font-size: 13px;
    font-weight: 500;
    line-height: 150%;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: rgba(255, 255, 255, 1);
  }

  .mobile-nav-link {
    color: rgba(255, 255, 255, 0.8);
    font-size: 13px;
    font-weight: 500;
    line-height: 150%;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .mobile-nav-link:hover {
    color: rgba(255, 255, 255, 1);
    background-color: rgba(255, 255, 255, 0.05);
  }

  #mobile-menu {
    transition:
      opacity 0.3s ease-in-out,
      transform 0.3s ease-in-out,
      max-height 0.3s ease-in-out;
    transform-origin: top;
  }

  .mobile-menu-closed {
    opacity: 0;
    transform: scaleY(0);
    max-height: 0;
    pointer-events: none;
  }

  .mobile-menu-open {
    opacity: 1;
    transform: scaleY(1);
    max-height: 500px;
    pointer-events: auto;
  }
</style>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("mobile-menu-closed");
    mobileMenu?.classList.toggle("mobile-menu-open");
  });

  // Smooth scroll to section
  const handleSmoothScroll = (e: Event) => {
    const href = (e.currentTarget as HTMLAnchorElement).getAttribute("href");
    if (href?.startsWith("#")) {
      e.preventDefault();
      const targetId = href.substring(1);
      const targetElement = document.getElementById(targetId);

      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: "smooth",
          block: "start",
        });
      }
    }
  };

  // Add smooth scroll to desktop nav links
  const desktopLinks = document.querySelectorAll(".desktop-nav a");
  desktopLinks.forEach((link) => {
    link.addEventListener("click", handleSmoothScroll);
  });

  // Add smooth scroll to mobile nav links
  const mobileLinks = mobileMenu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", (e) => {
      handleSmoothScroll(e);
      // Close menu when clicking a link
      mobileMenu?.classList.remove("mobile-menu-open");
      mobileMenu?.classList.add("mobile-menu-closed");
    });
  });

  // Close menu when resizing to desktop
  window.addEventListener("resize", () => {
    const isDesktopSize = window.matchMedia("(min-width: 768px)").matches;
    if (isDesktopSize && mobileMenu?.classList.contains("mobile-menu-open")) {
      mobileMenu.classList.remove("mobile-menu-open");
      mobileMenu.classList.add("mobile-menu-closed");
    }
  });
</script>
