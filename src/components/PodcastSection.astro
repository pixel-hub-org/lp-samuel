---
// src/components/PodcastSection.astro
import cd from "../assets/cd.svg";
import samucastEp from "../assets/samucast-ep.svg";
import samucastCd from "../assets/samucast-cd.svg";
import sound from "../assets/sound.svg";
import soundcloud from "../assets/soundcloud.svg";
---

<section class="w-full py-3">
  <div class="max-w-7xl mx-auto px-6 lg:px-24">
    <div
      class="relative flex items-center justify-center rounded-3xl border border-white/12 bg-[#02142B] overflow-hidden min-h-[17.75rem]"
    >
      <!-- Ondas de fundo -->
      <img
        src={sound.src}
        alt=""
        class="absolute inset-0 w-full h-full object-cover opacity-40 pointer-events-none"
      />

      <!-- Conteúdo central -->
      <div class="relative z-10 flex flex-col items-center text-center gap-4 px-4">
        <!-- Badge -->
        <div
          class="flex items-center gap-2 px-4 py-1 rounded-full border border-white bg-white/8"
        >
          <img src={soundcloud.src} alt="SoundCloud" class="w-4 h-4" />
          <span class="text-[#F2F2F2] text-[0.8125rem] font-medium">
            Disponível na SoundCloud
          </span>
        </div>

        <!-- Título -->
        <h2
          class="text-2xl font-semibold text-[#F2F2F2] font-outfit leading-tight max-w-[22.5rem]"
        >
          Dê o play no SamuCast e alavanque seus resultados.
        </h2>

        <!-- CTA -->
        <button
          class="relative flex items-center justify-center h-8 px-4 rounded-lg bg-[#1169DB] text-white font-semibold text-xs shadow-[inset_0_0.125rem_0_0_rgba(255,255,255,0.12)] hover:brightness-110 transition-all overflow-hidden"
        >
          Começar a ouvir!
          <span
            class="absolute w-16 h-16 -right-[1.875rem] -bottom-[3.125rem] bg-white/60 blur-[2.125rem]"
          ></span>
        </button>
      </div>

      <!-- CD ESQUERDO -->
      <div
        class="absolute left-16 inset-y-0 hidden lg:flex justify-center"
      >
        <div class="relative">
          <!-- Disco -->
          <div class="relative w-[9.25rem] h-[9.25rem] animate-spin-slow z-10 mt-[4.5rem]">
            <img src={cd.src} alt="" class="w-full h-full" />
            <img
              src={samucastCd.src}
              alt=""
              class="absolute inset-0 m-auto w-[4.0625rem] h-[4.0625rem]"
            />
          </div>

          <!-- Capa -->
          <img
            src={samucastEp.src}
            alt="SamuCast"
            class="absolute left-1/2 -translate-x-1/2 bottom-[-1.125rem] w-[11rem] h-[11rem] rounded-2xl shadow-2xl z-20"
          />
        </div>
      </div>

      <!-- CD DIREITO -->
      <div
        class="absolute right-16 inset-y-0 hidden lg:flex justify-center"
      >
        <div class="relative">
          <!-- Disco -->
          <div class="relative w-[9.25rem] h-[9.25rem] animate-spin-slow z-10 mt-[4.5rem]">
            <img src={cd.src} alt="" class="w-full h-full" />
            <img
              src={samucastCd.src}
              alt=""
              class="absolute inset-0 m-auto w-[4.0625rem] h-[4.0625rem]"
            />
          </div>

          <!-- Capa -->
          <img
            src={samucastEp.src}
            alt="SamuCast"
            class="absolute left-1/2 -translate-x-1/2 bottom-[-1.125rem] w-[11rem] h-[11rem] rounded-2xl shadow-2xl z-20"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Animação -->
  <style>
    @keyframes spin-slow {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    .animate-spin-slow {
      animation: spin-slow 10s linear infinite;
    }
  </style>
</section>
