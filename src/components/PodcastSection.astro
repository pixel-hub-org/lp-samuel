---
// src/components/PodcastSection.astro
import cd from "../assets/cd.svg";
import samucastCd from "../assets/samucast-cd.svg";
import samucastEp from "../assets/samucast-ep.svg";
import sound from "../assets/sound.svg";
import soundcloud from "../assets/soundcloud.svg";
---

<section class="w-full py-3">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div
      class="relative flex items-center justify-center rounded-3xl border border-white/12 bg-[#02142B] overflow-hidden md:min-h-[17.75rem] min-h-[24rem]"
    >
<div
        class="pointer-events-none absolute top-[-5rem] left-1/2 -translate-x-1/2
               w-[45rem] h-[15rem]
               opacity-80
               blur-[4rem]"
        style="background: radial-gradient(ellipse at top, white,  #0080ffa4, transparent);"
      ></div>
      <!-- Ondas de fundo -->
      <img
        src={sound.src}
        alt=""
        class="absolute inset-0 w-full h-full object-cover opacity-100 pointer-events-none"
      />

      <!-- Conteúdo central -->
      <div
        class="relative z-10 flex flex-col items-center text-center gap-4 px-4 pb-56 lg:pb-0 pt-[2.75rem] lg:pt-0"
      >
        <!-- Badge -->
        <div
          class="flex items-center gap-2 px-4 py-1 rounded-full border border-white/12 bg-white/8"
        >
          <img src={soundcloud.src} alt="SoundCloud" class="w-4 h-4" />
          <span class="text-[#F2F2F2] text-[0.8125rem] font-medium">
            Disponível na SoundCloud
          </span>
        </div>

        <!-- Título -->
        <h2
          class="text-2xl font-semibold text-[#F2F2F2] font-outfit leading-tight max-w-[22.5rem]"
        >
          Dê o play no SamuCast e alavanque seus resultados.
        </h2>

        <!-- CTA -->
        <a
          href="https://soundcloud.com/samuel_santiago"
          target="_blank"
          rel="noopener noreferrer"
          class="relative flex items-center justify-center h-8 px-4 rounded-lg
          bg-[#1169DB] text-white font-semibold text-xs
          shadow-[inset_0_0.125rem_0_0_rgba(255,255,255,0.12)]
          hover:brightness-110 transition-all overflow-hidden"
        >
          Começar a ouvir!
          <span
            class="absolute w-16 h-16 -right-[1.875rem] -bottom-[3.125rem] bg-white/60 blur-[2.125rem]"
          ></span>
        </a>
      </div>

      <!-- CD ESQUERDO -->
      <div class="absolute left-16 inset-y-0 hidden lg:flex justify-center">
        <div class="relative w-[12rem]">
          <!-- Disco -->
          <div
            class="absolute left-1/2 -translate-x-1/2 w-[9.5rem] h-[9.5rem] animate-spin-slow z-10 mt-[3.5rem]"
          >
            <img src={cd.src} alt="" class="w-full h-full" />
            <img
              src={samucastCd.src}
              alt=""
              class="absolute inset-0 m-auto w-[4.5rem] h-[4.5rem]"
            />
          </div>

          <!-- Capa -->
          <img
            src={samucastEp.src}
            alt="SamuCast"
            class="absolute left-1/2 -translate-x-1/2 bottom-[-1.125rem] w-[11.5rem] h-[11.5rem] rounded-2xl shadow-2xl z-20"
          />
        </div>
      </div>

      <!-- CD DIREITO -->
      <div class="absolute right-16 inset-y-0 hidden lg:flex justify-center">
        <div class="relative w-[12rem]">
          <!-- Disco -->
          <div
            class="absolute left-1/2 -translate-x-1/2 w-[9.5rem] h-[9.5rem] animate-spin-slow z-10 mt-[3.5rem]"
          >
            <img src={cd.src} alt="" class="w-full h-full" />
            <img
              src={samucastCd.src}
              alt=""
              class="absolute inset-0 m-auto w-[4.5rem] h-[4.5rem]"
            />
          </div>

          <!-- Capa -->
          <img
            src={samucastEp.src}
            alt="SamuCast"
            class="absolute left-1/2 -translate-x-1/2 bottom-[-1.125rem] w-[11.5rem] h-[11.5rem] rounded-2xl shadow-2xl z-20"
          />
        </div>
      </div>

      <!-- CD MOBILE (somente mobile) -->
      <div
        class="absolute left-1/2 -translate-x-1/2 inset-y-0 lg:hidden flex flex-col items-center justify-end pb-6"
      >
        <div class="relative w-[10rem] h-[11rem]">
          <!-- Disco -->
          <div
            class="absolute left-1/2 -translate-x-1/2 top-0 w-[7.5rem] h-[7.5rem] animate-spin-slow z-10"
          >
            <img src={cd.src} alt="" class="w-full h-full" />
            <img
              src={samucastCd.src}
              alt=""
              class="absolute inset-0 m-auto w-[3.5rem] h-[3.5rem]"
            />
          </div>

          <!-- Capa -->
          <img
            src={samucastEp.src}
            alt="SamuCast"
            class="absolute left-1/2 -translate-x-1/2 top-[3.5rem] w-[10rem] h-[10rem] rounded-2xl shadow-2xl z-20"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Animação -->
  <style>
    @keyframes spin-slow {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    .animate-spin-slow {
      animation: spin-slow 10s linear infinite;
    }
  </style>
</section>
