---
// src/components/Hero.astro
import "../styles/hero-effects.css";

// Importação das imagens
import leftDataImg from "../assets/Left data.svg";
import rightDataImg from "../assets/Right data.svg";
import heroPortrait from "../assets/Samuel.jpg";

interface Props {
  badge?: string;
  title?: string;
  subtitle?: string;
  ctaPrimaryText?: string;
  ctaSecondaryText?: string;
}

const {
  badge = "✨ Gestor de Projetos e Produtos",
  ctaPrimaryText = "Quero sair do zero com IA",
  ctaSecondaryText = "Saiba mais",
} = Astro.props;
---

<section
  class="relative w-full flex items-start lg:items-center justify-center bg-[#0a0a0a] overflow-hidden py-12 lg:pt-[150px] lg:pb-[85px] xl:min-h-screen"
>
  <div class="absolute inset-0 pointer-events-none z-0">
    <div class="hero-vignette absolute inset-0"></div>
    <div class="diagonal-beam"></div>
  </div>

  <div
    class="relative z-10 w-full max-w-7xl mx-auto flex flex-col lg:flex-row items-center justify-between gap-12 lg:gap-16 px-4 md:px-8 lg:px-12 mt-[60px] lg:mt-0"
  >
    <div
      class="flex-1 flex flex-col max-w-2xl items-center text-center lg:items-start lg:text-left"
    >
      <div
        class="inline-flex px-4 py-2 rounded-full border border-white/10 bg-white/5 backdrop-blur-sm w-fit mb-3"
      >
        <span class="text-white text-xs font-medium tracking-wide">{badge}</span
        >
      </div>

      <div class="relative mb-6 w-full">
        <h1
          class="text-[26px] md:text-[36px] lg:text-[40px] font-bold text-white leading-[1.2] font-outfit"
        >
          <div class="relative inline-block z-10">
            Transforme IA em valor
            <div
              class="absolute left-0 bottom-0 w-[220px] h-[26px] -z-10 bg-linear-to-r from-blue to-transparent opacity-80"
            >
            </div>
          </div>

          <span class="block mt-0 text-white">
            real no seu dia a dia,
            <br />
            sem precisar ser técnico
          </span>
        </h1>
      </div>

      <p
        class="text-base md:text-lg text-white/75 leading-relaxed mb-8 max-w-xl"
      >
        Pare de apenas “entender” IA. Aprenda a aplicar Inteligência Artificial
        com propósito, estratégia e resultados práticos, sem precisar ser
        técnico ou programador.
      </p>

      <div
        class="flex items-center gap-4 flex-wrap justify-center lg:justify-start"
      >
        <div class="relative group">
          <div class="relative rounded-xl overflow-hidden p-px">
            <span
              class="absolute inset-[-1000%] animate-border-spin cobrinha-gradient"
            ></span>

            <div class="relative h-full w-full bg-[#0a0a0a] rounded-xl p-1">
              <a
                href="https://wa.me/5588996297618"
                target="_blank"
                rel="noopener noreferrer"
                class="relative w-full h-11 px-8 flex items-center justify-center rounded-xl bg-blue hover:bg-blue-600 transition-all shadow-[0_0_20px_rgba(17,105,219,0.3)] hover:shadow-[0_0_30px_rgba(17,105,219,0.5)] text-white font-semibold text-sm overflow-hidden"
              >
                <span class="relative z-10">{ctaPrimaryText}</span>
              </a>
            </div>
          </div>
        </div>

        <a
          href="#como-atuo"
          class="h-11 px-6 flex items-center rounded-lg border border-white/10 hover:bg-white/5 text-white text-sm font-medium transition-all"
        >
          {ctaSecondaryText}
        </a>
      </div>
    </div>

    <div class="relative flex items-center justify-center isolate">
      <div class="beam-container">
        <div class="beam-glow-outer"></div>
        <div class="beam-glow-inner"></div>
        <div class="beam-core"></div>
        <div class="absolute inset-0 w-full h-full" id="beam-particles"></div>
      </div>

      <div
        class="relative z-10 w-full max-w-[320px] lg:max-w-sm aspect-350/400 group"
      >
        <img
          src={leftDataImg.src}
          alt=""
          class="absolute top-1/2 -translate-y-1/2 right-[55%] md:right-[60%] w-40 md:w-[320px] lg:w-[400px] pointer-events-none mix-blend-screen z-0 max-[600px]:hidden"
          style="-webkit-mask-image: linear-gradient(to left, black 30%, transparent 100%); mask-image: linear-gradient(to left, black 30%, transparent 100%);"
        />
        <img
          src={rightDataImg.src}
          alt=""
          class="absolute top-1/2 -translate-y-1/2 left-[55%] md:left-[60%] w-40 md:w-[320px] lg:w-[400px] pointer-events-none mix-blend-screen z-0 max-[600px]:hidden"
          style="-webkit-mask-image: linear-gradient(to right, black 30%, transparent 100%); mask-image: linear-gradient(to right, black 30%, transparent 100%);"
        />

        <div
          class="relative w-full h-full rounded-3xl overflow-hidden shadow-2xl border border-white/10 bg-[#151515] z-10"
        >
          <img
            src={heroPortrait.src}
            alt="Samuel Santiago"
            class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-105"
          />

          <div
            class="absolute inset-0 bg-linear-to-t from-black/95 via-black/40 to-transparent flex flex-col justify-end p-8"
          >
            <h3 class="text-2xl font-bold text-white font-outfit mb-2">
              Samuel Santiago
            </h3>
            <p class="text-sm text-gray-300 leading-relaxed font-light">
              Mais de 15 anos de experiência internacional em tecnologia e
              inovação (Dell, HP).
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function createParticles() {
    const container = document.getElementById("beam-particles");
    if (!container) return;
    container.innerHTML = "";
    const particleCount = 20;

    for (let i = 0; i < particleCount; i++) {
      const particle = document.createElement("div");
      particle.className = "particle";

      const xOffset = (Math.random() - 0.5) * 100;
      const startY = 20 + Math.random() * 80;
      const duration = 2 + Math.random() * 3;
      const delay = Math.random() * 2;

      particle.style.left = `calc(50% + ${xOffset}px)`;
      particle.style.top = `${startY}%`;
      particle.style.width = Math.random() > 0.5 ? "2px" : "3px";
      particle.style.height = particle.style.width;
      particle.style.animationDuration = `${duration}s`;
      particle.style.animationDelay = `${delay}s`;

      container.appendChild(particle);
    }
  }

  createParticles();
  document.addEventListener("astro:page-load", createParticles);
</script>
